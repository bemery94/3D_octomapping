<?xml version="1.0"?>
<launch>
    <!--    Start RVIZ with configuration file-->
        <node name="rviz" pkg="rviz" type="rviz" required="true"
                 args="--display-config $(find implement_hector_mapping)/rviz/implement_hector_mapping.rviz"/>

    <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">

    <param name="pub_map_odom_transform" value="true"/>
    <param name="map_frame" value="/map_world_frame" />
    <param name="base_frame" value="/base_footprint" />
    <param name="odom_frame" value="/base_footprint" />
    <param name="scan_topic" value="/scan_lsl"/>
</node>
</launch>
