<launch>
	<!-- vim: ft=xml -->

	<!-- Start each of the primary sensor nodes, if any fail should not start the main program -->
	<!-- IO Expansion board -->
	<node pkg="io_expander" type="io_expander_node" name="io_expander" respawn="true" clear_params="true" output="screen"> 
	</node>

	<!-- IMU board -->
	<node pkg="myahrs_plus_imu" type="myahrs_plus_imu_node" name="myahrs_imu" respawn="true" clear_params="true" output="screen"> 
	</node>

	<!-- Hokuyo Laser Scanner primary (used for localisation) -->
	<node pkg="hokuyo_node" type="hokuyo_node" name="laser_lsl" respawn="true">
		<param name="port" type="string" value="/dev/ttyACM1" />	
	</node>
	
	<!-- Camera node Firefly -->
	<include file="$(find pointgrey_camera_driver/launch/camera.launch"/>

	<!-- Start the data recorder node -->
	<node pkg="data_recorder" type="data_recorder_node" name="data_recorder" respawn="false" clear_params="true" output="screen"> 
	</node>

</launch>
