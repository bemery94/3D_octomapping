<?xml version="1.0"?>
<robot name="laser_scanner">
  <link name="map" />
<!-- The base_footprint frame is the position of the base_link projected vertically down to the
     ground with no rotation.-->
  <link name="base_footprint" />

<!-- The base_stabilized frame is the position of the base_link with no rotation-->
  <link name="base_stabilized" />

<!-- Since the joints can be maximum 1DOF, we have to model the base_stabilized to base_link
     transform as 2 single DOF joints (i.e. roll and pitch) -->
  <link name="base_roll" />
  <link name="base_pitch" />

<!-- The base_link frame is the actual pose of the laser_scanner -->
  <link name="base_link" />

<!--The following give the static transforms of the various scanner components relative to the
    base_link-->
  <link name="laser_lsl" />
  <link name="laser_lsm" />
  <link name="imu" />
  <link name="cam" />


  <joint name="base_to_lsl" type="fixed">
    <parent link="base_link"/>
    <child link="laser_lsl"/>
    <origin xyz="-0.035 0 0.085" rpy="0 0 0" />
  </joint>

  <joint name="base_to_lsm" type="fixed">
    <parent link="base_link"/>
    <child link="laser_lsm"/>
    <origin xyz="-0.035 -0.085 0" rpy="-1.57 0 -1.57" />
  </joint>

  <joint name="base_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu"/>
    <origin xyz="-0.08 0.065 0.03" rpy="-1.57 0 0" />
  </joint>

  <joint name="base_to_cam" type="fixed">
    <parent link="base_link"/>
    <child link="cam"/>
    <origin xyz="0 0.065 0" rpy="0 0 0" />
  </joint>

  <joint name="scanner_orientation_pitch_to_base_link" type="fixed">
    <parent link="base_pitch"/>
    <child link="base_link"/>
    <origin xyz="0 0.065 0" rpy="0 0 0" />
  </joint>

<!-- Gives the pitch value of the scanner with respect to the stabilized position (i.e. flat) of the
     laser scanner -->
    <joint name="scanner_orientation_roll_to_pitch" type="continuous">
        <parent link="base_roll"/>
        <child link="base_pitch"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0" />
    </joint>

<!-- Gives the roll value of the scanner with respect to the stabilized position (i.e. flat) of the
     laser scanner -->
    <joint name="stabilized_to_scanner_orientation_roll" type="continuous">
        <parent link="base_stabilized"/>
        <child link="base_roll"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="1 0 0" />
    </joint>

<!--Gives the transform between the footprint and the stabilized base. -->
  <joint name="footprint_to_stabilised" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_stabilized"/>
    <origin xyz="0 0 0.5" rpy="0 0 0" />
  </joint>

  <joint name="map_to_footprint" type="fixed">
      <parent link="map" />
      <child link="base_footprint" />
      <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
</robot>
